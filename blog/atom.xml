---
layout: feed
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
 
 <title>Your Blog</title>
 <link href="http://yourwebsiteurl.com/blog/atom.xml" rel="self"/>
 <link href="http://yourwebsiteurl.com/blog"/>
 <updated>{{ site.time | date_to_xmlschema }}</updated>
 <id>http://yourwebsiteurl.com/blog</id>
 <author>
   <name>Your Name</name>
   <email>youremailaddress@email.com</email>
 </author>

 {% for post in site.posts %}
 <entry>
   <title>{{ post.title }}</title>
   <link href="http://yourwebsiteurl.com{{ post.url }}"/>
   <updated>{{ post.date | date_to_xmlschema }}</updated>
   <id>http://yourwebsiteurl.com/{{ post.id }}</id>
   <content type="html">{{ post.content | xml_escape }}</content>
 </entry>
 {% endfor %}
 
</feed>
